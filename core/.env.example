DOMAIN=example.com
SNORT_ROOT=/srv/snort
SITE_ROOT="${SNORT_ROOT}/site"
CACHE_ROOT="${SNORT_ROOT}/cache"
UPLOADS_ROOT="${SNORT_ROOT}/uploads"
MIRRORS_ROOT="${SNORT_ROOT}/mirrors"
LOG_ROOT="${SNORT_ROOT}/logs"
RUNTIME_ROOT="${SNORT_ROOT}/run"

# Enable modules (comma-separated)
MODULES=nostr,realtime,comments,zaps,uploads,video-mirror,unix-auth,pwa

# Interactivity defaults
INTERACT_ENABLE=1
INTERACT_LIMIT=80
INTERACT_SHOW_REPLY=1
INTERACT_RELAYS="[\"/nostr\"]"

